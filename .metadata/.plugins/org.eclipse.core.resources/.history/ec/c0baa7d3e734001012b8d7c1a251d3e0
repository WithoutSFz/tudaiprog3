package tphash;

public class Arbol <T extends Comparable<T>> {
	private NodoArbol raiz;
	private int cant;
	public Arbol() {
		this.raiz=null;
		this.cant=0;
	}
	public int getCant() {
		return cant;
	}
	public void setCant(int cant) {
		this.cant = cant;
	}
	
	public void add(T elem) {
		if(this.raiz==null)
			raiz=new NodoArbol<T>(elem);
		else {
			if(this.raiz.getElem().compareTo(elem)>=0) {
				this.raiz.mayores=new NodoArbol<T>(elem);
				this.raiz.mayores.add(elem);
			}
			else
				this.raiz.mayores=new NodoArbol<T>(elem);
				
		}
			
	}
}
